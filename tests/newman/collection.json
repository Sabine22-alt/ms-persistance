  "item": [
    {
      "name": "Health Check",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response contains health message\", function () {",
              "    pm.expect(pm.response.text()).to.include(\"healthy\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Actuator Health",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Health status is UP\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.equal('UP');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/actuator/health",
          "host": ["{{baseUrl}}"],
          "path": ["actuator", "health"]
        }
      }
    },
    {
      "name": "Home Page",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Accept either a proper home page response or fallback to actuator health",
              "if (pm.response.code === 200 && pm.response.text().includes('API is running')) {",
              "    pm.test('Home page OK', function () {",
              "        pm.expect(pm.response.code).to.equal(200);",
              "        pm.expect(pm.response.text()).to.include('API is running');",
              "    });",
              "} else {",
              "    // fallback to actuator health check",
              "    pm.sendRequest(pm.environment.get('baseUrl') + '/actuator/health', function (err, res) {",
              "        pm.test('Actuator health fallback is reachable and UP', function () {",
              "            pm.expect(err).to.equal(null);",
              "            pm.expect(res).to.have.property('code', 200);",
              "            var json = res.json();",
              "            pm.expect(json).to.have.property('status');",
              "            pm.expect(json.status).to.eql('UP');",
              "        });",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    },
